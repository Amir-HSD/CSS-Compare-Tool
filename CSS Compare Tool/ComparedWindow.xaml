<ui:FluentWindow
    x:Class="CSS_Compare_Tool.ComparedWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CSS_Compare_Tool"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="ComparedWindow"
    Width="1000"
    Height="600"
    Loaded="FluentWindow_Loaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="10*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="10">
            <ui:TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontTypography="BodyStrong">
                Compared Css
            </ui:TextBlock>
            <ui:TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                FontTypography="Caption"
                Text="{Binding Caption, Mode=TwoWay}" />
        </Grid>
        <Grid Grid.Row="1">
            <avalonEdit:TextEditor
                Name="ComparedCssEditor"
                Background="#272727"
                FontSize="12"
                Foreground="White"
                ShowLineNumbers="True"
                SyntaxHighlighting="CSS" IsReadOnly="True" />
        </Grid>
        <Grid Grid.Row="2" Margin="200,5,200,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Margin="0,0,20,0">
                <ui:Button
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Click="Button_Click_1">
                    Copy
                </ui:Button>
            </Grid>

            <Grid Grid.Column="1" Margin="20,0,0,0">
                <ui:Button
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Click="Button_Click">
                    Close
                </ui:Button>
            </Grid>

        </Grid>
    </Grid>
</ui:FluentWindow>
