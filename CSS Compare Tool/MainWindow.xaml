<ui:FluentWindow
    x:Class="CSS_Compare_Tool.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CSS_Compare_Tool"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="MainWindow"
    Width="1280"
    Height="720"
    Loaded="FluentWindow_Loaded"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions />

        <Grid
            Grid.Row="0"
            MaxHeight="33.52"
            VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*" />
                <ColumnDefinition Width="0.01*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <ui:TextBlock
                    Padding="8,8,0,0"
                    FontTypography="Caption"
                    Foreground="WhiteSmoke"
                    IsEnabled="False">
                    Css Compare Tool
                </ui:TextBlock>
                <WrapPanel
                    x:Name="DragMousePanel"
                    Background="#ffff"
                    MouseDown="DragMousePanel_MouseDown"
                    Opacity="0" />
            </Grid>
            <Grid
                Grid.Column="2"
                MaxWidth="116"
                HorizontalAlignment="Right"
                VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid>
                    <ui:Button
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="Button_Minimize"
                        CornerRadius="0,0,0,0">
                        <ui:SymbolIcon RenderTransformOrigin="0.5,0.5" Symbol="LineHorizontal120">
                            <ui:SymbolIcon.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform />
                                    <SkewTransform />
                                    <RotateTransform Angle="0" />
                                    <TranslateTransform />
                                </TransformGroup>
                            </ui:SymbolIcon.RenderTransform>
                        </ui:SymbolIcon>
                    </ui:Button>
                </Grid>
                <Grid Grid.Column="1">
                    <ui:Button
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="Button_Maximize"
                        CornerRadius="0,0,0,0">
                        <ui:SymbolIcon Symbol="Maximize16" />
                    </ui:Button>
                </Grid>
                <Grid Grid.Column="2">
                    <ui:Button
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Appearance="Danger"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Click="Button_Exit"
                        CornerRadius="0,0,0,0">
                        <ui:SymbolIcon RenderTransformOrigin="0.5,0.5" Symbol="Add32">
                            <ui:SymbolIcon.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform />
                                    <SkewTransform />
                                    <RotateTransform Angle="45" />
                                    <TranslateTransform />
                                </TransformGroup>
                            </ui:SymbolIcon.RenderTransform>
                        </ui:SymbolIcon>
                    </ui:Button>
                </Grid>
            </Grid>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="10*" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="2" Grid.Column="1">
                <ui:TextBlock
                    Padding="0,0,0,5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    FontTypography="Caption">
                    Made With ❤ By Amir.HSD
                </ui:TextBlock>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="0">
                <ui:TextBlock
                    Padding="0,0,0,10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom">
                    Main CSS
                </ui:TextBlock>
            </Grid>
            <Grid
                Grid.Row="1"
                Grid.Column="0"
                Margin="20,0,0,0">

                <avalonEdit:TextEditor
                    Name="MainCssEditor"
                    Background="#272727"
                    FontSize="12"
                    Foreground="White"
                    ShowLineNumbers="True"
                    SyntaxHighlighting="CSS" />
            </Grid>
            <Grid Grid.Row="0" Grid.Column="2">
                <ui:TextBlock
                    Padding="0,0,0,10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom">
                    Second CSS
                </ui:TextBlock>
            </Grid>
            <Grid
                Grid.Row="1"
                Grid.Column="2"
                Margin="0,0,20,0">

                <avalonEdit:TextEditor
                    Name="SecondCssEditor"
                    Background="#272727"
                    FontSize="12"
                    Foreground="White"
                    ShowLineNumbers="True"
                    SyntaxHighlighting="CSS"
                    Text="" />
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />

                    </Grid.RowDefinitions>
                    <Grid />
                    <Grid Grid.Row="11" Margin="20,5,20,5">
                        <ui:Button
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Click="Button_Compare">
                            Compare
                        </ui:Button>
                    </Grid>
                    <Grid Grid.Row="12" Margin="20,5,20,5">
                        <ui:Button
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Click="Button_Compare_v2">
                            Compare V2
                        </ui:Button>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

    </Grid>
</ui:FluentWindow>
